import java.util.Scanner;
import java.util.Random;

public class DoWhile {

    public static void main(String[] args) {

        Scanner entrada = new Scanner(System.in);
        Random aleatorio = new Random(); // Gerador de n√∫mero aleat√≥rio

        String texto = "por Favor";
        String texto1 = "";

        do {
            System.out.println("Voc√™ precisa falar a palavra m√°gica...");
            System.out.println("Quer sair? ");
            texto = entrada.nextLine();
        } while (!texto.equalsIgnoreCase("Por Favor"));

        System.out.println("Obrigado!");
        System.out.println("Aguarde enquanto redirecionamos voc√™ at√© a sa√≠da...");
        System.out.println("Antes disso, resolva a pegadinha HAHA");
        System.out.println("Boa sorte daqui pra frente!");

        // Gera um n√∫mero aleat√≥rio entre 1 e 10
        int numeroPensado = aleatorio.nextInt(10) + 1;

        System.out.println("Em qual n√∫mero de 1 a 10 estou pensando?");
        texto1 = entrada.nextLine();

        int palpite;
        try {
            palpite = Integer.parseInt(texto1);

            if (palpite == numeroPensado) {
                System.out.println("üéâ UAU! Voc√™ acertou! Era o n√∫mero " + numeroPensado + "!");
            } else {
                System.out.println("‚ùå Errou! Eu estava pensando no n√∫mero " + numeroPensado + ".");
            }
        } catch (NumberFormatException e) {
            System.out.println("‚ö†Ô∏è Isso n√£o √© um n√∫mero v√°lido!");
        }

        entrada.close();
    }
}
